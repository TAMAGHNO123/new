
generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  category  String
  price     Float
  image     String
  details   String
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String
}

model Order {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  products  String[]
  total     Float
  createdAt DateTime @default(now())
}