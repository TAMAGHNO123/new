generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  password String
  name     String
  role     String  @default("user") // "user" or "admin"
}

model Product {
    id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  category    String   // "Car", "Bike", "Smartphone", "Watch"
  brand       String
  model       String
  year        Int?
  price       Float
  location    String?  // For vehicles
  description String
  imageUrls   String[] // Array of image URLs
  status      String   @default("in stock") // "in stock" or "sold out"
  createdAt   DateTime @default(now())
}

model Review {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  productId String
  userId    String
  rating    Int      // 1-5
  comment   String
  createdAt DateTime @default(now())
}

model CartItem {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  productId String
  quantity  Int      @default(1)
}

model Order {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  userId     String?
  items      Json     // Array of { productId, quantity, price }
  total      Float
  taxes      Float
  createdAt  DateTime @default(now())
  guestEmail String?
  status     String   @default("pending") // e.g., pending, shipped, delivered, cancelled
}